{
  "name": "awesome-react-starter",
  "version": "1.0.0",
  "description": "Awesome react starter kit",
  "main": "index.js",
  "scripts": {
    "start": "node ./server.js",
    "start-dev-server": "webpack-dev-server --host localhost --mode development --content-base=www --inline --watch --hot --open",
    "dev": "npm-run-all -p watch-css start-dev-server",
    "build": "webpack --mode production",
    "watch-css": "node-sass-chokidar src/styles -o src/styles --watch --recursive"
  },
  "watch": {
    "build": "src/",
    "start": "node ./dist/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Surendhar95/awesome-react-starter.git"
  },
  "author": "Surendhar",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Surendhar95/awesome-react-starter/issues"
  },
  "homepage": "https://github.com/Surendhar95/awesome-react-starter#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "css-loader": "^2.1.1",
    "html-webpack-plugin": "^3.0.6",
    "jest": "^22.4.2",
    "node-sass-chokidar": "^1.3.4",
    "nodemon": "^1.17.1",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.3.0",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "webpack-dev-server": "^3.3.1",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "babel-preset-es2015": "^6.24.1",
    "express": "^4.16.2",
    "prop-types": "^15.7.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-transition-group": "^4.0.1",
    "style-loader": "^0.23.1",
    "webpack": "^4.1.1",
    "webpack-cli": "^3.3.2"
  }
}
